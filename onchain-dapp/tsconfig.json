{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/screens/*": ["src/screens/*"],
      "@/crypto/*": ["src/crypto/*"],
      "@/storage/*": ["src/storage/*"],
      "@/lib/*": ["src/lib/*"],
      "@/sdk/*": ["../sdk/*"]
    }
  },
  "include": ["src"]
}
